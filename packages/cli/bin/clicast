#!/usr/bin/env bun
import { dirname, join } from 'path';
import { fileURLToPath } from 'url';

const scriptPath = process.argv[1];
if (!scriptPath) {
  console.error('Error: Unable to determine script path');
  process.exit(1);
}

// Get the package directory (go up from bin/)
const scriptDir = dirname(fileURLToPath(`file://${scriptPath}`));
const packageDir = dirname(scriptDir);
await import(join(packageDir, 'dist', 'index.js'));